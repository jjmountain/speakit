<div style="background-color: #F8F8FF;">
  <% @lesson.student_time_trials(student).each_with_index do | trial, index | %>
    <% if trial.completed %>
    <div class="mistakes-header">
      <div class ="homework-header"><h4>Homework:</h4></div>
      <div>
      <p>Listen to your conversation again and think about your mistakes.</p><p>Write a comment for each mistake with a correction of what you should have said.</p>
      </div>
    </div>
      <% trial.mistakes.each_with_index do | mistake, index | %>
        <div class="mistake-row">
          <div class="mistake-info">
            <div class="mistake-category">
              <h4><%= mistake.category.capitalize %> mistake</h4>
            </div>
            <div class="mistake-time">
              <p>at <%= (mistake.created_at - trial.started_at).round(2) %> seconds</p>
            </div>
          </div>
          <div class="mistake-student-box">
            <% @homework = mistake.homeworks.find_by(student: student) %>
            <%= simple_form_for @homework, remote: true do |form| %>
                <%= form.input :comment, class: 'comment-box' %>
              <%= button_tag "", style: 'display:none' %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="mistake-row">
        <%= button_tag "Submit Homework", id: 'homework-submit-all', type: :button, class: 'btn-primary' %>
      </div>
    <% end %>
  <% end %>
</div>


