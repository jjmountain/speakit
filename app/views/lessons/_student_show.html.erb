<div class="container">
  <div class="table-wrapper">
    <%= render 'layouts/user_wrapper' %>
    <%= render 'layouts/user_course_wrapper' %>
    <%= render 'layouts/student_lesson_wrapper'%>
    <%= render 'layouts/homework_header' if @lesson.student_time_trials(current_student).first.completed %>
    <%= render 'layouts/student_time_trial_audio', student: current_student %>
    <%= render 'layouts/time_trial_mistakes', student: current_student %>
  </div>
  <% if @lesson.student_time_trials(current_student).first.try(:completed) %>
  <div class="table-wrapper-footer">
    <%= button_tag "Submit Homework", id: 'homework-submit-all', type: :button, class: 'btn-primary' %>
  </div>
  <% end %>
</div>

